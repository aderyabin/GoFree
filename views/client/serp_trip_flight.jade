li.m-c-l-item.v-s-t-item.flight(data-cid=cid)
  .v-s-t-i-header
    strong.v-s-t-i-price= app.utils.formatNum(price)
      small руб.

    p.v-s-t-meta
      span.v-s-t-i-provider= provider
      span.v-s-t-i-airline
        i(data-type=airline)

  .v-s-t-i-contents
    .v-s-t-i-times
      .v-s-t-i-origin
        span.v-s-t-i-t-time= departure
        span.v-s-t-i-t-place= origin.place.name_ru

      .v-s-t-i-duration
        small= app.utils.humanizeDuration(duration)

      .v-s-t-i-destination
        span.v-s-t-i-t-time= arrival
        span.v-s-t-i-t-place= destination.place.name_ru

    .v-s-t-i-stops
      if stops
        =app.utils.choosePlural(stops, ['пересадка', 'пересадки', 'пересадок'])
      else
        | Без пересадок

  .v-s-t-i-footer
    span.v-s-t-i-pick.button.medium.green Выбрать

  .v-s-t-i-overlay
    span.v-s-t-i-selected Выбрано
    .v-s-t-i-ofooter
      span.v-s-t-i-unpick.button.medium.gray Убрать
      
