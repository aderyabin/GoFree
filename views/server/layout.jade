      script
        var app = {
          env: {
            debug: true
          },
          api: {
            root: '/',
            places: '/api/v2/autocomplete/',
            images: '/api/v1/image/'
          },
          models: {},
          collections: {},
          views: {}
        };

      script(src='/socket.io/socket.io.js')
      !=assets.tag('/views.js')
      !=assets.tag('/libs.js')

      !=assets.tag('/app.js')

